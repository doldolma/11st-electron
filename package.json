{
  "name": "11st-electron",
  "version": "0.2.3",
  "private": true,
  "homepage": "./",
  "main": "public/electron.js",
  "dependencies": {
    "@emotion/react": "^11.13.3",
    "@emotion/styled": "^11.13.0",
    "@fontsource/roboto": "^5.0.14",
    "@mui/icons-material": "^6.0.2",
    "@mui/material": "^6.0.2",
    "@mui/styled-engine-sc": "^6.0.2",
    "axios": "^1.7.7",
    "cheerio": "^1.0.0",
    "electron-log": "^5.2.0",
    "electron-updater": "^6.3.4",
    "file-saver": "^2.0.5",
    "notistack": "^3.0.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.26.1",
    "react-scripts": "5.0.1",
    "react-uuid": "^2.0.0",
    "recoil": "^0.7.7",
    "styled-components": "^6.1.13",
    "xlsx": "^0.18.5"
  },
  "scripts": {
    "react-start": "react-scripts start",
    "react-build": "react-scripts build",
    "start": "concurrently \"cross-env NODE_ENV=development BROWSER=none npm run react-start\" \"wait-on http://127.0.0.1:3000 && cross-env NODE_ENV=development electron . --enable-logging\"",
    "build": "npm run react-build && cross-env NODE_ENV=production electron-builder",
    "build:win": "npm run react-build && cross-env NODE_ENV=production electron-builder --win --x64",
    "deploy": "npm run react-build &&  electron-builder --win --x64 --publish always"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^32.0.2",
    "electron-builder": "^25.0.5",
    "wait-on": "^8.0.0"
  },
  "build": {
    "appId": "com.example.11st-electron",
    "productName": "11st-electron",
    "nsis": {
      "oneClick": true,
      "perMachine": true,
      "allowToChangeInstallationDirectory": false,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "11st-electron",
      "runAfterFinish": true,
      "uninstallDisplayName": "11st-electron-uninstaller",
      "artifactName": "${productName}-Setup-${version}.${ext}"
    },
    "win": {
      "target": "nsis",
      "requestedExecutionLevel": "requireAdministrator"
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ]
    },
    "publish": {
      "provider": "github",
      "owner": "doldolma",
      "repo": "11st-electron"
    }
  }
}
